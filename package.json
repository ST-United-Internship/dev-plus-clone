{
  "name": "react-js",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "postinstall": "husky install",
    "lint": "eslint \"{src,apps,libs,test}/**/*.jsx\" --fix",
    "format": "prettier --write \"src/**/*.jsx\" \"test/**/*.jsx\""
  },
  "dependencies": {
    "antd": "^5.3.2",
    "localforage": "^1.10.0",
    "match-sorter": "^6.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.9.0",
    "sort-by": "^1.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.36.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "vite": "^4.2.0"
  },
  "lint-staged": {
    "*.jsx, *.ts": [
      "npm run lint",
      "npm run format",
      "git add ."
    ]
  }
}
